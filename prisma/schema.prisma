generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider          = "postgresql"
    url               = env("DATABASE_URL")
    shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model ContactForm {
    id        String   @id @default(uuid())
    email     String?
    phone     String?
    service   String
    features  String?
    createdAt DateTime @default(now()) @map("created_at")

    @@map("contact_form")
}

model Subscribers {
    id        String   @id @default(uuid())
    email     String   @unique
    agreement Boolean  @default(false)
    createdAt DateTime @default(now()) @map("created_at")

    @@map("subscribers")
}

model SearchTerm {
    id        String   @id @default(uuid())
    term      String   @unique // The actual search term, must be unique
    count     Int      @default(1) // How many times it has been searched
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
